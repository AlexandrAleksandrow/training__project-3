extends ../auth.layout.pug

block content
  section.section.welcome
    include button    

    .welcome__block
      .weclome__content
        img.author__face(src='../../assets/images/face.jpg', alt='author__face')          
        .author__name Лимасов Александр
        .auhthor__greeting Начинающий веб разработчик 
        include social

      .menu
        a.menu__link.left__corner(href="works.html", title="myWorks") Мои работы
        a.menu__link(href="about.html", title="about") Обо мне
        a.menu__link.right__corner(href="blog.html", title="blog") Блог
    
    p.copy &copy; Alexandr Limasow | 2018
    
    
    //- uathorization
    
    
    form#form.auth(action='server.php', method='post', name='form')
      .auth__title - авторизуйтесь -
      .auth__row
        .auth__input-pic
          +icon('login', 'auth__input-ico')
        input.auth__input(type="text" placeholder="Логин")
      .auth__row
        .auth__input-pic
          +icon('password', 'auth__input-ico')
        input.auth__input(type="text" placeholder="Пароль")
      .auth__row
        label.auth__checkbox
          input.auth__checkbox--invisible(type="checkbox" name="check__box")
          .auth__checkbox--visible
            .auth__checkbox-pic
              //+ico('check', 'auth__checkbox-ico')
          span.auth__checkbox-text Я человек
      .auth__radio      
        h4.auth__subtitle Вы точно не робот?
        .auth__row
          label.auth__button
            input.auth__radioBtn(type="radio" name="yes" value="radio1")
            .form__circle
              .form__circle-inner
            span.auth__radio-text Да
          label.auth__button
            input.auth__radioBtn(type="radio" name="yes" value="radio1")
            .form__circle
              .form__circle-inner
            span.auth__radio-text Не уверен
      .auth__row.row-btn   
        a.auth__btn.left-btn(href="#")
          p.auth__btn-text На главную
        a.auth__btn.right-btn(href="#")
          p.auth__btn-text Войти   